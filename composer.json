{
	"name": "laravel/laravel",
	"description": "The Laravel Framework.",
	"keywords": ["framework", "laravel"],
	"license": "MIT",
	"type": "project",
	"require": {
		"laravel/framework": "5.0.*",
		"doctrine/dbal": "~2.5",
		"barryvdh/laravel-debugbar": "~2.0",
		"illuminate/html": "~5.0",
		"intervention/image": "~2.0",
		"intervention/imagecache": "dev-master",
		"adamwathan/eloquent-oauth": "dev-laravel-5",
		"filp/whoops" : "~1.0",
		"spatie/laravel-glide": "~2.0",
		"barryvdh/laravel-httpcache": "0.2.x@dev",
		"caffeinated/modules": "~1.0@dev",
		"caffeinated/themes": "~1.1",
		"zizaco/entrust": "dev-laravel-5",
		"sofa/revisionable": "~1.0@dev",
		"laracasts/utilities": "~2.0",
		"frozennode/administrator": "5.*"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1",
		"laracasts/generators": "~1.0",
		"fzaninotto/faker": "1.5.*@dev",
		"laracasts/testdummy": "~2.0"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"App\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
